<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div><a href="/add">新規作成</a></div>
    <table>
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>メッセージ</th>
          <th>時間</th>
        </tr>
      <% for(var i in content){ %>
        <tr>
          <% var obj = content[i]; %>
          <td><%= obj.user_id %></td>
          <td><%= obj.name %></td>
          <td><%= obj.message %></td>
          <td><%= obj.post_time %></td>
          <td>
            <form action="/edit" method="get">
              <input type="hidden" name="message_id" value="<%= obj.message_id %>">
              <input type="submit" value="更新">
            </form>
          </td>
          <td>
            <form action="/delete" method="get">
              <input type="hidden" name="id" value="<%= obj.message_id %>">
              <input type="submit" value="削除">
            </form>
          </td>
        </tr>
        <% } %>
    </table>
  </body>
</html>
